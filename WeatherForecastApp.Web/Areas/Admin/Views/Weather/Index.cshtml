@model WeatherForecastApp.Models.Weather

<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 text-center">
            <hr/>
            <h1>Weather in your city</h1>

            <form method="post" asp-action="Index" class="mt-3">
                <div class="form-group">
                    <input type="text" class="form-control" name="city" placeholder="Enter a city" required />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" class="btn btn-primary" value="Get Weather" />
                </div>
            </form>

            @if (Model != null)
            {
                <div class="mt-3">
                    <h2>Weather in @Model.City</h2>
                    <p>Temperature: @Model.Temperature ℃</p>
                    <p>Humidity: @Model.Humidity %</p>
                    <p>Wind Speed: @Model.WindSpeed m/s</p>
                    <p>Weather Description: @Model.WeatherDescription</p>
                    <p>Date and Time: @Model.DateTime</p>
                </div>
            }
        </div>
    </div>
</div>
