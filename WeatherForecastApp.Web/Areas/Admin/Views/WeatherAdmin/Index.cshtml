@model IEnumerable<WeatherForecastApp.Models.Weather>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Weather List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Customer" asp-controller="Weather" asp-action="Index" class="btn btn-primary">
               <i class="bi bi-stars"></i> &nbsp; Get the weather forecast
            </a>
        </div>
    </div>
    <br/><br/>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                City
            </th>
            <th>
                Temperature 
            </th>
            <th>
                Humidity 
            </th>
            <th>
                Wind Speed 
            </th>
            <th>
                Weather Description  
            </th>
            <th>
                DateTime   
            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.City
                </td>
                <td width="30%">
                    @obj.Temperature
                </td>
                <td width="30%">
                    @obj.Humidity
                </td>
                <td width="30%">
                    @obj.WindSpeed 
                </td>
                <td width="30%">
                    @obj.WeatherDescription  
                </td>
                <td width="30%">
                    @obj.DateTime 
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="WeatherAdmin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-x"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>